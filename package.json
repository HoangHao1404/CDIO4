{
  "name": "remn-fullstack-project",
  "version": "1.0.0",
  "description": "REMN Stack Project - React + Express + MongoDB + Node.js",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-server": "cd backend && npm install",
    "install-client": "cd frontend && npm install",
    "install-all": "npm install && npm run install-server && npm run install-client",
    "test": "cd backend && npm test",
    "test:client": "cd frontend && npm test",
    "lint": "cd backend && npm run lint",
    "lint:client": "cd frontend && npm run lint"
  },
  "keywords": [
    "react",
    "express",
    "mongodb",
    "nodejs",
    "fullstack",
    "javascript",
    "mern",
    "remn"
  ],
  "author": "Your Name <your-email@example.com>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/remn-fullstack-project.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/remn-fullstack-project/issues"
  },
  "homepage": "https://github.com/yourusername/remn-fullstack-project#readme"
}
